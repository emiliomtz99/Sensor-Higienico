<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".BanoB">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="417dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/edificiosBtn"
            android:layout_width="209dp"
            android:layout_height="64dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="#549aab"
            android:gravity="center|center_vertical"
            android:text="@string/BaÃ±os"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="#2E2828"
            android:textSize="36sp" />

        <Button
            android:id="@+id/emergenciaButton"
            android:layout_width="194dp"
            android:layout_height="51dp"
            android:layout_gravity="left"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="#f1802d"
            android:text="@string/emergencia"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#3D3838"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="634dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LLE2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#2A5A5A5A"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="102dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_restroom" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4b"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Cabina 1"
                        android:textSize="24sp" />

                </LinearLayout>

                <Space
                    android:layout_width="27dp"
                    android:layout_height="86dp" />

                <LinearLayout
                    android:layout_width="116dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Restante"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="70%"
                        android:textColor="#1DFA29"
                        android:textSize="24sp" />

                </LinearLayout>

                <Space
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <LinearLayout
                android:id="@+id/LLE1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#2A5A5A5A"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="102dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_restroom" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cabina 2"
                        android:textSize="24sp" />

                </LinearLayout>

                <Space
                    android:layout_width="27dp"
                    android:layout_height="86dp" />

                <LinearLayout
                    android:layout_width="116dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="60%"
                        android:textColor="#1DFA29"
                        android:textSize="24sp" />

                </LinearLayout>

                <Space
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/LLE4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#2A5A5A5A"
                android:orientation="horizontal">

                <Space
                    android:layout_width="27dp"
                    android:layout_height="86dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                    <TextView
                        android:id="@+id/Jab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal|center_vertical"
                        android:gravity="center|clip_vertical|center_vertical"
                        android:text="Jabon"
                        android:textSize="24sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="116dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6c2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="80%"
                        android:textColor="#3EF13D"
                        android:textSize="24sp" />

                </LinearLayout>

                <Space
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="73dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/backbtn"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:scaleType="fitStart"
            app:srcCompat="@mipmap/ic_flechita_round" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>